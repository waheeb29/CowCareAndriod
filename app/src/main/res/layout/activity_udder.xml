<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mouth">

    <TextView
        android:id="@+id/txtsuggestion"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FA422020"
        android:textColorHint="#FA000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="239dp"
        android:layout_height="40dp"
        android:text="Swelling of Udder"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/Black"
        android:textColorLink="#00000000"
        android:textSize="30sp"
        app:fontFamily="cursive"
        app:layout_constraintBottom_toBottomOf="@+id/txtsuggestion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtsuggestion" />

    <TextView
        android:id="@+id/txtswelling"
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="412dp"
        android:gravity="center"
        android:text="Select Swelling Amount"
        android:textColor="@color/Black"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtsuggestion" />

    <Spinner
        android:id="@+id/Spinner_swelling"
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:layout_marginTop="2dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtswelling"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtswelling"
        app:layout_constraintTop_toBottomOf="@+id/txtswelling"
        app:layout_constraintVertical_bias="0.029999971" />

    <TextView
        android:id="@+id/txtpus"
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="188dp"
        android:gravity="center"
        android:text="Pus in Udder"
        android:textColor="@color/Black"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Spinner_swelling"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/Spinner_swelling"
        app:layout_constraintTop_toBottomOf="@+id/Spinner_swelling"
        app:layout_constraintVertical_bias="0.20999998" />

    <Spinner
        android:id="@+id/Spinner_pus"
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:layout_marginTop="2dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtpus"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtpus"
        app:layout_constraintVertical_bias="0.029999971" />

    <TextView
        android:id="@+id/txtmilk"
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="84dp"
        android:gravity="center"
        android:text="Change in Milk Color"
        android:textColor="@color/Black"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Spinner_pus"
        app:layout_constraintVertical_bias="0.19999999" />

    <Spinner
        android:id="@+id/Spinner_milk"
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="28dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtmilk"
        app:layout_constraintStart_toStartOf="@+id/txtmilk"
        app:layout_constraintTop_toBottomOf="@+id/txtmilk"
        app:layout_constraintVertical_bias="0.029999971" />

    <Button
        android:id="@+id/btnproceed"
        android:layout_width="340dp"
        android:layout_height="35dp"
        android:background="@drawable/selector"
        android:text="Proceed"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Spinner_milk"
        app:layout_constraintStart_toStartOf="@+id/Spinner_milk"
        app:layout_constraintTop_toBottomOf="@+id/Spinner_milk"
        app:layout_constraintVertical_bias="0.41000003" />


</androidx.constraintlayout.widget.ConstraintLayout>